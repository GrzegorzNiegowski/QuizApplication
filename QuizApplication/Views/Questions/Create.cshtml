@model QuizApplication.Models.ViewModels.AddQuestionViewModel

@{
    ViewData["Title"] = "Dodaj pytanie";
}

<h2>Dodaj pytanie do quizu: @ViewBag.QuizTitle</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="QuizId" />

    <div class="form-group">
        <label>Obrazek (opcjonalnie)</label>
        <input type="file" name="file" class="form-control" accept="image/*" />
    </div>

    <div class="form-group">
        <label asp-for="Content"></label>
        <textarea asp-for="Content" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TimeLimitSeconds"></label>
        <input asp-for="TimeLimitSeconds" class="form-control" />
        <span asp-validation-for="TimeLimitSeconds" class="text-danger"></span>
    </div>

    <hr />
    <h4>Odpowiedzi (wprowadź treść i zaznacz poprawne)</h4>

    @for (int i = 0; i < Model.Answers.Count; i++)
    {
        <div class="form-group">
            <label>Odpowiedź @(i + 1)</label>
            <input asp-for="Answers[@i].Content" class="form-control" />
            <div class="form-check" style="margin-top:6px;">
                <input asp-for="Answers[@i].IsCorrect" class="form-check-input" />
                <label class="form-check-label">Poprawna</label>
            </div>
            <span asp-validation-for="Answers[@i].Content" class="text-danger"></span>
        </div>
    }

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <button type="submit" class="btn btn-primary">Zapisz i dodaj następne</button>
    <button type="submit" name="submit" value="finish" class="btn btn-success">Zakończ i pokaż quiz</button>

    <a asp-controller="Quizzes" asp-action="Details" asp-route-id="@Model.QuizId" class="btn btn-secondary">Anuluj i wróć</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
