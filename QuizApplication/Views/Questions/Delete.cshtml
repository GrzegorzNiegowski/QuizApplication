@model QuizApplication.DTOs.QuestionDtos.EditQuestionDto
@{
    ViewData["Title"] = "Usuń pytanie";
}

<h2>Usuń pytanie</h2>

<div>
    <p>Czy na pewno chcesz usunąć to pytanie?</p>
    <div><strong>@Model.Content</strong></div>
    <ul>
        @foreach (var a in Model.Answers)
        {
            <li>@a.Content @(a.IsCorrect ? "(poprawna)" : "")</li>
        }
    </ul>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="questionId" value="@Model.QuestionId" />
        <button type="submit" class="btn btn-danger">Usuń</button>
        <a asp-controller="Quizzes" asp-action="Details" asp-route-id="@Model.QuizId" class="btn btn-secondary">Anuluj</a>
    </form>
</div>