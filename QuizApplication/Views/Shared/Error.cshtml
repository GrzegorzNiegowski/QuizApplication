@using QuizApplication.Models
@model ErrorViewModel
@{
    ViewData["Title"] = "Błąd";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-danger">😕 Ups! Coś poszło nie tak</h1>
    <p class="lead">Przepraszamy, wystąpił nieoczekiwany błąd.</p>

    @if (Model.ShowRequestId)
    {
        <p class="text-muted">
            <strong>ID żądania:</strong> <code>@Model.RequestId</code>
        </p>
    }

    <a href="/" class="btn btn-primary mt-3">Wróć na stronę główną</a>
</div>